<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="geogitDispatcherMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="alwaysUseFullPath" value="true" />
    <property name="mappings">
      <props>
        <prop key="/geogit">geogitDispatcher</prop>
        <prop key="/geogit/**">geogitDispatcher</prop>
      </props>
    </property>
  </bean>

  <bean id="geogitDispatcher" class="org.geogit.rest.dispatch.GeogitDispatcher" />

  <bean id="geogitConfigMapping" class="org.geogit.rest.dispatch.GeogitRESTMapping">
    <property name="routes">
      <map>
        <entry>
          <key><value></value></key>
          <value>geogitRepositoryFinder</value>
        </entry>
        <entry>
          <key><value>/</value></key>
          <value>geogitRepositoryFinder</value>
        </entry>
        <entry>
          <key><value>/{repository}</value></key>
          <value>geogitRepositoryFinder</value>
        </entry>
        <entry>
          <key><value>/{repository}/{command}</value></key>
          <value>geogitRepositoryFinder</value>
        </entry>
        <entry>
          <key><value>/{repository}/repo/{resource}</value></key>
          <value>geogitRepositoryFinder</value>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="geogitRepositoryFinder" class="org.geogit.rest.repository.RepositoryFinder">
    <constructor-arg ref="catalog" />
  </bean>

  <!--bean id="repositoryFinder" class="org.geogit.geoserver.rest.RepositoryFinder" / -->
</beans>
